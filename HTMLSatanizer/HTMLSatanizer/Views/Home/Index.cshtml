@using HTMLSatanizer.ViewModels;
@model List<HTMLSiteViewModel>
@{
    ViewData["Title"] = "HTML Satanizer";
    string h1 = "<h1>";

    int rnd = new Random().Next(0, 6);
    string randomAction = (rnd % 2 == 0) ? "URL" : (rnd % 3 == 0) ? "RawHTML" : "File";
}

<div class="text-center hero mb-3 ">
    <h1 class="display-4 mb-3 font-weight-bold">Welcome to </h1>
    <h1 class="display-4 mb-3 font-weight-bold">@ViewData["Title"]</h1>
    <div class="slogan">
        <h1>@h1 == <img class="align-self-center mt-5" src="~/imgs/devilemoji.png" /></h1>

        <h2>Time to sin!</h2>

    </div>
</div>


@if (Model.Count == 0)
{
    <h2 class="text-center">You haven't join the <strong><a asp-controller="HTML" asp-action="@randomAction"> evil</a></strong> side of the HTML?!</h2>
}
else
{
    <section>
        <div class="text-center">
            <h3 class="display-4">Latest Satanized HTML</h3>
        </div>

        @foreach (var model in Model)
        {
            <div class="card mt-5">
                <div class="card-header">
                    <h5 class="card-title">@(model.URL)</h5>
                    <h6>@(model.Type)</h6>
                </div>
                <div class="card-body">
                    <p class="card-text">@(model.ShortHTML)</p>
                    <a asp-controller="HTML" asp-action="ById" asp-route-id="@(model.Id)" class="btn btn-primary">Full Information</a>
                </div>
            </div>
        }

        <div class="mb-2 mt-4">
            <a asp-controller="HTML" asp-action="All" asp-route-id="1" class="btn btn-info">Check all entries</a>
        </div>
    </section>
}

